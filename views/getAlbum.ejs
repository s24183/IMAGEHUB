<!DOCTYPE html>
<html>
    <%-include('header/head')%>
    <body>
    <%- include('nav/getAlbumNav') %>

    <div class="container">

        <div class="headerparaAlign">
            <h1><%=translation.Album.Header%></h1>
            <p><%=translation.Album.Paragraph%></p>
        </div>
        <div class="container mx-auto px-5 py-2 lg:px-32 lg:pt-12">
                    <div class="-m-1 flex flex-wrap md:-m-2">
                        <% album.forEach(alb => { %>

                        <div class="flex w-1/3 flex-wrap">
                            <div class="w-full p-1 md:p-2" style="margin: 10px auto">
                                <% if(req.user.isAdmin===true) { %>
                                <div>  <a class="icolinkdelete" href="/album/<%=alb.id%>"> <i class="bi bi-x-circle"></i></a>

                                        <a class="icolinkupdate" href="/album/updateAlbum/<%=alb.id%>"> <i class="bi bi-pencil"></i></a>
                                </div>

                                <a href="/album/<%=alb.albumName%>/getAllPicture/">    <img
                                           src="<%=alb.Address%>"
                                           alt="gallery"
                                           class="block h-full w-full rounded-lg object-cover object-center"
                                    /> </a>

                               <p ><%= alb.albumName%> </p>
                                <% } else{ %>

                                <a href="/album/<%=alb.albumName%>/getAllPicture/">    <img
                                        src="<%=alb.Address%>"
                                        alt="gallery"
                                        class="block h-full w-full rounded-lg object-cover object-center"

                                /> </a>

                                <p ><%= alb.albumName%> </p> <% } %>





                            </div>
                        </div>

                        <% }); %>
                    </div>
        </div>


    </div>

    <%-include('footer/footer')%>
    </body>
</html>

