<!DOCTYPE html>
<html>
<%-include('header/head')%>
    <body>
        <%- include('nav/getAllPictureNav') -%>

        <div class="container">
            <% album.forEach(alb => { %>
            <div class="container mx-auto px-5 py-2 lg:px-32 lg:pt-12">
                        <div class="headerparaAlign">
                            <h1><%=translation.Picture.Header%></h1>
                            <p><%=translation.Picture.Header%></p>
                        </div>

                        <div class="-m-1 flex flex-wrap md:-m-2">

                            <%alb.pictures.forEach(pic => { %>

                            <div class="flex w-1/3 flex-wrap">

                                <div class="w-full p-1 md:p-2" style="margin: 10px auto">
                                   <% if(req.user.isAdmin===true) { %> <div>

                                        <a class="icolinkdelete" href="/album/<%=alb.albumName%>/getAllPicture/<%=pic.id%>"> <i class="bi bi-x-circle"></i></a>

                                        <a class="icolinkupdate" href="/album/<%=alb.albumName%>/updatePicture/<%=pic.id%>"> <i class="bi bi-pencil"></i></a>
                                    </div>
                                    <img
                                            src="<%=pic.Address%>"
                                            alt="gallery"
                                            class="block h-full w-full rounded-lg object-cover object-center"

                                    />

                                    <p ><%= pic.PictureName%></p>

                                    <% } else{ %>
                                        <img
                                                src="<%=pic.Address%>"
                                                alt="gallery"
                                                class="block h-full w-full rounded-lg object-cover object-center"

                                                />

                                        <p ><%= pic.PictureName%></p>  <% } %>



                                </div>
                            </div>


                            <% }); %>
                        </div>

            </div>
            <% }); %>
        </div>
        <%-include('footer/footer')%>

    </body>
</html>



